using System;

namespace Practich_3
{
    class Program
    {
        static void Main(string[] args)
        {
            double n = 0;
            int s = 2;
            double pi = 3.14;
            
            for (int i = 1; i < 10; i++)
            {
                n += 1 / Math.Pow(i, s);

            }

            Console.WriteLine("Значение" + n +  "приблизительно равно 3,14/6 =    " + pi / 6);

            Console.ReadLine();
        }
    }
}
